<div class='container' style="min-height: 600px; border-top-right-radius: 0px; border-top-left-radius: 0px;padding-bottom:50px">
	<div ng-show="Character != null" class="col-lg-12"> 
		<div class="col-lg-12" ng-show="Characters.length > 0">
			<h4>Other Characters In Search:</h4>
			<div class="col-xs-2 card-small" ng-repeat="Searched in Characters" >
				<div class="card-inner" ng-click="loadCharacter(Searched)" style="text-align: center;">
					<div class="row image center-block col-sm-12">
	        			<img ng-src="{{getImage(Searched)}}" alt="{{Searched.name}}" class="img-thumbnail center-block" />
	        		</div>
	        		<div class="row center-block col-sm-12">
	        			<h4>{{Searched.name}}</h4>
	        		</div>
        		</div>
			</div>
			<span  class="character-list" >{{Searched.name}}</span>
		</div>       	
		<div class="row col-lg-12">			
			<h2 style="text-align:center">{{Character.name}} <br /><small>{{Character.real_name}}</small></h2>
			<img ng-src="{{getImage(Character)}}" alt="{{Character.name}}" class="img-thumbnail center-block details" />
		</div>
		<div class="row col-lg-12 character-tabs">
			<ul class="nav nav-tabs" role="tablist">
				<li role="presentation"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Description</a></li>
				<li role="presentation"><a href="#friends" aria-controls="friends" role="tab" data-toggle="tab">Friends</a></li>
				<li role="presentation"><a href="#enemies" aria-controls="enemies" role="tab" data-toggle="tab">Enemies</a></li>
			</ul>
			
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane" id="description">
					<div ng-bind-html="Character.description"></div>
				</div>
				<div role="tabpanel" class="tab-pane" id="friends">
					<ul class="list-inline">
						<li class="list-group-item" ng-repeat="Friend in Character.character_friends">
							<a ng-href="{{Friend.id}}" ng-click="loadCharacter(Friend)">{{Friend.name}}</a>
						</li>
					</ul>
				</div>
				<div role="tabpanel" class="tab-pane" id="enemies">
					<ul class="list-inline">
						<li class="list-group-item" ng-repeat="Enemy in Character.character_enemies">
							<a ng-href="{{Enemy.id}}" ng-click="loadCharacter(Enemy)">{{Enemy.name}}</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div ng-show="Character == null && !searching" class="col-lg-12 center-block">        	
		<img src="/images/trapped-001.jpg" class="img-rounded center-block" />
		<div class="col-lg-12" style="text-align: center">
			<h2>Cannot Find Your Character? It's A Trap!</h2>
		</div>
	</div>
	<div ng-show="Character == null && searching" class="col-lg-12 center-block">        	
		<img src="/images/searching-001.png" class="img-rounded center-block" />
		<div class="col-lg-12" style="text-align: center">
			<h2>Searching For Your Character As Fast As We Can</h2>
		</div>
	</div>
</div>